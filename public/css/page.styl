/*
 * Import nib
 */
@import 'nib'

/*
 * Nib provides a CSS reset
 */
//global-reset()

display-area-height = 390px
display-area-top = 160px
main-content-width = 1530px
table-content-width = 750px
chart-content-width = 750px

first-column-left = 120px
second-column-left = 900px

chart-hist-content-width = 1530px
chart-hist-area-top-hist = 570px

body
    height 100%
    
.content
    height inherit
    margin 0px 0px
    
.header
    position absolute
    top 0px
    width 99%
    height 100px
    font 30px Arial
    font-variant small-caps
    text-align center
    color #eaeaea
    background-color #2a2a2a
    box-shadow 4px 4px 3px #502f18
    margin 0px 0px

    
    
h1
    margin-top 5px
    
p
    margin-top 2px
    
.main-content
    position absolute
    top 110px
    left first-column-left
    height 40px
    width main-content-width
    text-align center
    font 25px Arial
    color #cccccc 
    background-color #2a2a2a
    margin auto
    padding 1px 4px
    border-radius 10px
    box-shadow 4px 4px 3px #502f18

    
.main-table
    position absolute
    top display-area-top
    left first-column-left
    height display-area-height
    width table-content-width
    
    font 20px Arial
    color #cccccc  
    background-color #2a2a2a 
    margin auto
    padding 4px 4px
    border-radius 10px
    box-shadow 4px 4px 3px #502f18
    
.main-chart
    position absolute
    top display-area-top
    left second-column-left
    width chart-content-width
    height display-area-height
    
    color #003265 
    background-color #2a2a2a
    
    margin auto
    padding 4px 4px
    border-radius 10px
    box-shadow 4px 4px 3px #502f18
    
.main-chart-hist
    position absolute
    top chart-hist-area-top-hist
    left first-column-left
    width chart-hist-content-width
    height display-area-height
    
    color #003265 
    background-color #2a2a2a
    
    margin auto
    padding 4px 4px
    border-radius 10px
    box-shadow 4px 4px 3px #502f18
   
    
.footer
    position absolute
    bottom 0px
    width 99%
    height 100px
    font 20px Arial
    font-variant small-caps
    color #eaeaea
    background-color #2a2a2a
    box-shadow: 4px -4px 3px #502f18
    margin 0px 0px
    
    
body
    background-color #212121

table
    margin auto
    width 400px
    
thead
    font-weight bold
    background-color  #2a2a2a
    
td
    border-bottom 1px Solid #cccccc 
    

    