/*
 * Import nib
 */
@import 'nib'

/*
 * Nib provides a CSS reset
 */
//global-reset()

display-area-height = 400px
display-area-top = 200px
main-content-width = 1050px
table-content-width = 500px
chart-content-width = 500px

first-column-left = 120px
second-column-left = 660px

.content
    height 100%
    width 100%
    
.header
    position absolute
    top 0px
    width 100%
    height 100px
    font 30px Arial
    font-variant small-caps
    text-align center
    color #eaeaea
    background-color #2a2a2a
    box-shadow 4px 4px 3px #502f18

    
    
h1
    margin-top 5px
    
p
    margin-top 2px
    
.main-content
    position absolute
    top 120px
    left first-column-left
    height 40px
    width main-content-width
    text-align center
    font 25px Arial
    color #cccccc 
    background-color #2a2a2a
    margin auto
    padding 1px 0px
    border-radius 10px
    box-shadow 4px 4px 3px #502f18

    
.main-table
    position absolute
    top display-area-top
    left first-column-left
    height display-area-height
    width table-content-width
    
    font 20px Arial
    color #cccccc  
    background-color #2a2a2a 
    margin auto
    padding 4px 4px
    border-radius 10px
    box-shadow 4px 4px 3px #502f18
    
.main-chart
    position absolute
    top display-area-top
    left second-column-left
    width chart-content-width
    height display-area-height
    
    color #003265 
    background-color #2a2a2a
    
    margin auto
    padding 4px 4px
    border-radius 10px
    box-shadow 4px 4px 3px #502f18
   
    
.footer
    position absolute
    bottom 0px
    width 100%
    height 60px
    font 20px Arial
    font-variant small-caps
    color #eaeaea
    background-color #2a2a2a
    box-shadow: -4px -4px 3px #502f18
    
    
footer
    margin-bottom 0px
    
body
    background-color #212121

table
    margin auto
    width 400px
    
thead
    font-weight bold
    background-color  #2a2a2a
    
td
    border-bottom 1px Solid #cccccc 
    

    